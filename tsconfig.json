{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "module": "es2015",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./tsbuild",
        "sourceMap": true,
        "strict": true,
        "baseUrl": ".",
        "target": "es5",
        "paths": {
            "@/*": [
                "src/*"
            ]
        }
    },
    "files": [
        "./src/vue-shims.d.ts"
    ],
    "include": [
        "./mockapp/**/*.(ts|vue)",
        "./src/**/*.(ts|vue)"
    ],
    "exclude": [
        "**/node_modules/(?!vuex-module-decorators)/"
    ]
}